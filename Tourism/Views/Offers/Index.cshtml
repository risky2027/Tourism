@model IEnumerable<Tourism.Models.Offer>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


@if (User.IsInRole("guide"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TextOfOffer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfOfferFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfOfferTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfOffer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TextOfOffer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfOfferFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfOfferTo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfOffer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Name)
                </td>
                <td>
                    @if (User.IsInRole("guide"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @if (User.IsInRole("guide"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
