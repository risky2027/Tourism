@model Tourism.Models.RegisterModel


<div class="container reg">
    <h2>Регистрация</h2>

    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div>
                <label>Как вы хотите зарегистрироваться?</label><br />
                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-outline-primary">
                        <input type="radio" name="role" id="guide" value="guide" autocomplete="off" checked>Гид или фотограф
                    </label>
                    <label class="btn btn-outline-primary">
                        <input type="radio" name="role" id="user" value="user" autocomplete="off">Турист
                    </label>
                </div>
            </div>
            <div>
                <label asp-for="Name">Введите Имя</label><br />
                <input type="text" asp-for="Name" class="rounded border border-info" />
                <span asp-validation-for="Name" />
            </div>
            <div>
                <label asp-for="Email">Введите Email</label><br />
                <input type="text" asp-for="Email" class="rounded border border-info" />
                <span asp-validation-for="Email" />
            </div>
            <div>
                <label asp-for="Phone">Введите номер телефона</label><br />
                <input type="text" asp-for="Phone" class="rounded border border-info" />
                <span asp-validation-for="Phone" />
            </div>
            <div>
                <label asp-for="Password">Введите пароль</label><br />
                <input asp-for="Password" class="rounded border border-info" />
                <span asp-validation-for="Password" />
            </div>
            <div>
                <label asp-for="ConfirmPassword">Повторно введите пароль</label><br />
                <input asp-for="ConfirmPassword" class="rounded border border-info" />
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <br />
            <div>
                <input type="submit" value="Регистрация" class="btn btn-outline-dark" />
            </div>
        </div>
    </form>
</div>