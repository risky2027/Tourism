@model IEnumerable<Tourism.Models.Offer>

@{
    ViewData["Title"] = "Список доступных предложений для туристов";
}

<div id="headerwrap">
    <div class="col-lg-6 offset-3 hw">
        <h2 id="desc">Путешествия по Республике Татарстан!</h2>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/images/kazan.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/kazan2.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/kazan3.jpg" alt="Second slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<hr />
<div class="container w">
    <h2 id="desc">Список доступных предложений</h2>
    <div class="row wrTours">
        @foreach (var item in Model)
        {
            <div class="col-lg-4">
                <div class="card cardTours">
                    <img class="card-img-top" src="~/images/kazan2.jpg" />
                    <div class="card-body">
                        <h4 class="card-title">
                            <b>@Html.DisplayFor(modelItem => item.User.Name)</b><br />
                        </h4>
                        <p class="card-text">
                            <b>Номер телефона: </b>
                            @Html.DisplayFor(modelItem => item.User.Phone)<br />
                            <b>Город:</b>
                            @Html.DisplayFor(modelItem => item.City)<br />
                            <b>Предложение:</b>
                            @Html.DisplayFor(modelItem => item.TypeOffer.Name)<br />
                            <b>Описание:</b>
                            @Html.DisplayFor(modelItem => item.TextOfOffer)<br />
                            <b>Дата начала:</b>
                            @Html.DisplayFor(modelItem => item.DateOfOfferFrom)<br />
                            <b>Дата окончания:</b>
                            @Html.DisplayFor(modelItem => item.DateOfOfferTo)<br />
                            <b>Стоимость:</b>
                            @Html.DisplayFor(modelItem => item.Price) руб.<br />
                        </p>
                        <a href="#!" class="btn btn-primary">Заказать</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
